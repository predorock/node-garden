extends layout

block content
	div(class="row")
		div(class="col-md-4 col-md-offset-4", id="login-container")
			h3 Login
			form(name="userdata", action="/login", method="POST")
				div(class="form-group")
					label(for='username') Username
					input#username(type="text", name="username", class="form-control")
				div(class="form-group")
					label(for='password') Password
					input#password(type="password", name="password", class="form-control")
				button(type="submit", class="btn btn-default") Entra

block footer_script
	script(src="js/login.js")